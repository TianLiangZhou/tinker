{
    "name": "meshell/tinker",
    "description": "平台通用API调用SDK, 支持淘宝，支付宝，阿里云，腾讯",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "zhoutianliang",
            "email": "mfkgdyve@gmail.com"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "php": "~7.1",
        "phpunit/phpunit": "^7",
        "friendsofphp/php-cs-fixer": "^2.3",
        "squizlabs/php_codesniffer": "^3.0",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tinker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tinker\\": "src",
            "Tinker\\Test\\": "tests"
        }
    },
    "scripts": {
        "format": [
            "@fixer"
        ],
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "vendor/bin/phpunit --coverage-clover clover.xml",
        "phpcs": "vendor/bin/phpcs ./src --colors --tab-width=4 --standard=PSR2",
        "phpcbf": "vendor/bin/phpcbf ./src --standard=PSR2 --tab-width=4",
        "fixer": "vendor/bin/php-cs-fixer fix ./src --rules=@PSR2"
    }
}
